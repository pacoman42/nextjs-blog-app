datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  username String
  email    String  @unique
  phone    String?
  website  String?
  address  Json?
  company  Json?
  posts    Post[]
}

model Post {
  id      Int    @id @default(autoincrement())
  title   String
  body    String
  userId  Int
  user    User   @relation(fields: [userId], references: [id])
}